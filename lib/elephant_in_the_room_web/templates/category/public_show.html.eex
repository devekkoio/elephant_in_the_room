<div class="el-sites">
  <div class="el-title">
    <div class="uk-tile uk-tile-primary">
      <p class="uk-h4"><h1>Category: <%= @category.name %></h1></p>
      <p><%= @category.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-1"> </div>
    <div class="col-xs-10">
      <%= shared_render_posts_card @conn, @category.posts, assigns %>
    </div>
  </div>
  <span><%= link "Back", to: site_path(@conn, :public_show, @site.id) %></span>
</div>
