<% alias ElephantInTheRoomWeb.PaginationView %>

<h2>Sites</h2>
<p><%= "Page: #{@page_number}/#{@total_pages}" %></p>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <%= for site <- @sites do %>
      <tr>
        <td>
          <%= link site.name,
          to: site_path(@conn, :show, site) %>
        </td>

        <td class="text-right">
          <span>
            <%= link "Edit",
            to: site_path(@conn, :edit, site),
            class: "btn btn-default btn-xs" %></span>
          <span>
            <%= link "Delete",
            to: site_path(@conn, :delete, site),
            method: :delete,
            data: [confirm: "Are you sure?"],
            class: "btn btn-danger btn-xs" %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= PaginationView.paginate(@conn, @page_number, @total_pages, &ElephantInTheRoomWeb.Router.Helpers.site_path/3) %>

<br>
<span><%= link "New Site", to: site_path(@conn, :new) %></span>
<span><%= link "Back", to: admin_path(@conn, :index) %></span>
