<div class="uk-flex uk-flex-right">
    <div class="uk-subnav uk-subnav-divider" uk-margin>
        <%= case get_logged_user(@conn) do %>
            <% {:admin, user} -> %>
                <p><strong><%= user.username %></strong></p>
                <%= link "Admin", to: admin_path(@conn, :index), class: "uk-link" %>
                <%= link "Logout", to: login_path(@conn, :logout), class: "uk-link" %>

            <% {:not_an_admin, user} -> %>
                <p><strong><%= user.username %></strong></p>
                <%= link "Logout", to: login_path(@conn, :logout), class: "uk-link" %>
            <% {:error, :not_logged_in} -> %>
                <%= link "Login", to: login_path(@conn, :index), class: "uk-link" %>
                <%= link "Sign Up", to: user_path(@conn, :new), class: "un-link" %>
        <% end %>
    </div>
</div>
